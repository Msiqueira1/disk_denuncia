<div class="container p-4">
  <div class="row">

    <div class="col-md-4 mx-auto">
      <div class="card text-center">
        <img src="/img/mulher_no_computador.jpg" alt="Logo ItatiaiaFazt" class="card-img-top mx-auto m-2 w-50">
        <div class="card-body">
          <form action="/protocolo" method="POST">
            <div class="form-group">
              <input type="text" name="username" repete='repeatval' placeholder="Informe o Protocolo"
                class="form-control valor" autofocus>
            </div>
            <div class="form-group">
              <input hidden type="text" name="password" id='repeatval' placeholder="Password" class="form-control">
            </div>
            <button class="btn btn-dark btn-block">
              Validar Protocolo
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

<script>
  $(document).ready(function () {
    $(".valor").on("input", function () {
      var textoDigitado = $(this).val();
      var inputCusto = $(this).attr("repete");
      $("#" + inputCusto).val(textoDigitado);
    });
  });
</script>